{
  "compileOnSave": false,
  "compilerOptions": {
    "allowUnusedLabels": false,
    "baseUrl": "./src",
    "downlevelIteration": true,
    "paths": {
      "@shared-functions/*": ["app/shared/functions/*.functions.ts"],
      "@month-models": ["app/month/models/index.ts"],
      "@todo-enums": ["app/to-dos/enums/index.ts"],
      "@todo-models": ["app/to-dos/models/index.ts"],
      "@actions/*": ["app/store/actions/*.actions.ts"],
      "@states/*": ["app/store/states/*.state.ts"],
      "@reducers/*": ["app/store/reducers/*.reducer.ts"],
      "@selectors/*": ["app/store/selectors/*.selector.ts"],
    },
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "esnext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",    
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "noUnusedLocals": true
  }
}
